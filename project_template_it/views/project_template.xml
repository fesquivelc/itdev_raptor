        <record id="project_template_tree" model="ir.ui.view">
            <field name="name">project.template.tree</field>
            <field name="model">project.template</field>
            <field name="arch" type="xml">
                <tree string="Plantillas de proyecto">
                    <field name="name"/>
                </tree>
            </field>
        </record>

